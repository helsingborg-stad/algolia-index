{
    "name": "@helsingborg-stad/algolia-index",
    "version": "3.2.4",
    "description": "Manages algolia index (with ms-support and mixed indexes)",
    "main": "assets/dist/js/algolia-index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "vite build",
        "build:dev": "vite build --mode development",
        "format": "npx biome format ./source",
        "format:write": "npx biome format ./source --write",
        "lint": "npx biome lint ./source",
        "lint:write": "npx biome lint ./source --write"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/helsingborg-stad/algolia-index"
    },
    "author": "Sebastian Thulin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/helsingborg-stad/algolia-index/issues"
    },
    "files": [
        "dist/"
    ],
    "homepage": "https://github.com/helsingborg-stad/algolia-index",
    "devDependencies": {
        "@biomejs/biome": "2.3.4",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3",
        "vite": "^7.2.2",
        "vite-config-factory": "^1.0.1"
    },
    "browserslist": [
        "> 1%",
        "not dead"
    ],
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.(js|ts)$": "ts-jest"
        },
        "collectCoverageFrom": [
            "source/**/*.js",
            "source/**/*.ts"
        ],
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testMatch": [
            "**/*.test.(js|ts)"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(.*\\.mjs$))"
        ]
    }
}